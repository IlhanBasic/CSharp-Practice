<Page x:Class="zadatakNarandze.View.pageGajbica"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zadatakNarandze.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pageGajbica">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Gajbica sa narandzama" FontSize="20" HorizontalAlignment="Center" Margin="10"/>
        <Canvas x:Name="AktivnaPodloga" Grid.Row="1">

        </Canvas>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <Button FontSize="20" x:Name="btnPokvari" Content="Pokvari" Margin="10" Click="btnPokvari_Click"/>
            <Button FontSize="20" x:Name="btnSnimi" Content="Snimi" Margin="10" Click="btnSnimi_Click"/>
        </StackPanel>
    </Grid>
    
</Page>
