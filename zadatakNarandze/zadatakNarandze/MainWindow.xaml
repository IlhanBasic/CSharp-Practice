<Window x:Class="zadatakNarandze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadatakNarandze"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Unesite dimenzije gajbice:" FontSize="20" HorizontalAlignment="Center" Margin="20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Broj vrsta" FontSize="20" Margin="10"/>
                <TextBox Width="300" Margin="10" Text="{Binding Rows}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Broj Kolona" FontSize="20" Margin="10"/>
                <TextBox Width="300" Margin="10" Text="{Binding Cols}"/>
            </StackPanel>
            <Button Content="Potvrdi" Height="30" Width="100" FontSize="20" Click="Button_Click" />
        </StackPanel>

    </Grid>
</Window>
